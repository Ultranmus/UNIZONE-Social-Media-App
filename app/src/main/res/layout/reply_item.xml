<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="11dp"
    android:backgroundTint="#A5A4A4"
    app:cardUseCompatPadding="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:backgroundTint="#E91E63"
        android:layout_width="@dimen/_42mdp"
        android:layout_height="@dimen/_42mdp"
        android:background="@drawable/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/prfImg"
        app:layout_constraintTop_toTopOf="@+id/prfImg"
        app:layout_constraintEnd_toEndOf="@+id/prfImg"
        app:layout_constraintBottom_toBottomOf="@+id/prfImg"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prfImg"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="@dimen/_1mdp"
        app:civ_border_color="@color/white"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12mdp"
        android:layout_marginEnd="@dimen/_32mdp"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="My moments"
        android:textColor="#000000"
        android:textSize="@dimen/_15font_mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/prfImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/prfImg"
        app:layout_constraintTop_toTopOf="@+id/prfImg"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6mdp"
        android:layout_marginEnd="@dimen/_32mdp"
        android:inputType="textMultiLine"
        android:text="Tap to make momentsssssssssssssssss sssssssssssssssssssssssssssssssssssssssss"
        android:textColor="#000000"
        android:textSize="@dimen/_11font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2mdp"
        android:layout_marginEnd="16dp"
        android:text="12-10-2020"
        android:textColor="#000000"
        android:textSize="@dimen/_9font_mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:paddingBottom="@dimen/_4mdp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>